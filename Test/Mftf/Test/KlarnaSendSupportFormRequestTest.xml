<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="KlarnaSendSupportFormRequestTest">
        <annotations>
            <features value="Klarna Support"/>
            <stories value="Send a support form request"/>
            <title value="Send a support form request"/>
            <description value="Send a support form request"/>
            <severity value="AVERAGE"/>
            <testCaseId value="SUPPORT_SUPPORT"/>
            <group value="Klarna_Support"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <magentoCLI command="config:set system/smtp/disable 1" stepKey="disableEmailSending"/>
        </before>
        <after>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
            <magentoCLI command="config:set system/smtp/disable 0" stepKey="enableEmailSending"/>
        </after>
        <actionGroup ref="KlarnaSendAdminSupportFormActionGroup" stepKey="gotoSupportForm"/>
    </test>
</tests>
